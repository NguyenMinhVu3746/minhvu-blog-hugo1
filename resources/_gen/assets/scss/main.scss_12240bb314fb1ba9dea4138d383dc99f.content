*{margin:0;padding:0;box-sizing:border-box}body{font-family:-apple-system,BlinkMacSystemFont,segoe ui,Roboto,helvetica neue,Arial,sans-serif;line-height:1.6;color:#1f2937;background-color:#f9fafb}img{max-width:100%;height:auto;display:block}a{color:#4f46e5;text-decoration:none;transition:all .3s ease}a:hover{color:#10b981}.container{max-width:1200px;margin:0 auto;padding:0 1.5rem}.site-header{background:#fff;box-shadow:0 1px 2px rgba(0,0,0,5%);padding:1.5rem 0;position:sticky;top:0;z-index:1000;border-bottom:1px solid #e5e7eb}.site-header .container{display:flex;justify-content:space-between;align-items:center;flex-wrap:wrap;gap:1rem}.logo{display:flex;flex-direction:column;gap:.25rem}.logo a{display:flex;align-items:center;gap:.75rem;color:#1f2937}.logo-icon{font-size:2rem}.site-title{font-size:1.5rem;font-weight:700;letter-spacing:.5px;background:linear-gradient(135deg,#4F46E5,#10B981);-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text}.site-tagline{font-size:.875rem;color:#6b7280;padding-left:2.75rem}.main-nav{display:flex;gap:2rem;align-items:center}.main-nav a{font-weight:500;color:#1f2937;padding:.5rem 1rem;border-radius:.375rem;transition:all .3s ease}.main-nav a:hover,.main-nav a.active{background:#f9fafb;color:#4f46e5}.hero-section{text-align:center;padding:4rem 0 3rem;background:linear-gradient(135deg,#667eea 0%,#764ba2 100%);color:#fff;margin-bottom:3rem;border-radius:1rem}.hero-section h2{font-size:2.5rem;font-weight:700;margin-bottom:1rem}.hero-section p{font-size:1.125rem;opacity:.9;max-width:600px;margin:0 auto}.posts-grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(350px,1fr));gap:2rem;margin-bottom:3rem}.post-card{background:#fff;border-radius:1rem;overflow:hidden;box-shadow:0 4px 6px -1px rgba(0,0,0,.1);transition:all .3s ease;display:flex;flex-direction:column}.post-card:hover{transform:translateY(-5px);box-shadow:0 10px 15px -3px rgba(0,0,0,.1)}.post-image{width:100%;height:220px;overflow:hidden;background:#f9fafb}.post-image img{width:100%;height:100%;object-fit:cover;transition:transform .3s ease}.post-card:hover .post-image img{transform:scale(1.05)}.post-content{padding:1.5rem;flex:1;display:flex;flex-direction:column}.post-content h3{font-size:1.25rem;margin-bottom:.75rem;line-height:1.4}.post-content h3 a{color:#1f2937}.post-content h3 a:hover{color:#4f46e5}.post-meta{display:flex;align-items:center;gap:.75rem;font-size:.875rem;color:#6b7280;margin-bottom:1rem}.separator{color:#6b7280}.post-summary{color:#6b7280;margin-bottom:1rem;flex:1;line-height:1.6}.post-tags{display:flex;flex-wrap:wrap;gap:.5rem;margin-top:auto}.tag{background:#f9fafb;color:#6b7280;padding:.25rem .75rem;border-radius:.375rem;font-size:.813rem;font-weight:500;transition:all .3s ease}.tag:hover{background:#4f46e5;color:#fff}.single-post{background:#fff;border-radius:1rem;padding:3rem;margin:2rem 0;box-shadow:0 4px 6px -1px rgba(0,0,0,.1);max-width:800px;margin-left:auto;margin-right:auto}.post-header{margin-bottom:2rem;padding-bottom:2rem;border-bottom:2px solid #e5e7eb}.post-header h1{font-size:2.5rem;line-height:1.3;margin-bottom:1rem;color:#1f2937}.post-header .post-meta{display:flex;align-items:center;gap:1rem;flex-wrap:wrap}.post-body{font-size:1.125rem;line-height:1.8;color:#1f2937}.post-body h2{font-size:1.875rem;margin-top:2.5rem;margin-bottom:1rem;color:#1f2937}.post-body h3{font-size:1.5rem;margin-top:2rem;margin-bottom:.75rem;color:#1f2937}.post-body p{margin-bottom:1.5rem}.post-body ul,.post-body ol{margin-bottom:1.5rem;padding-left:2rem}.post-body li{margin-bottom:.5rem}.post-body code{background:#f9fafb;padding:.2rem .5rem;border-radius:.375rem;font-size:.9em;color:#e53e3e}.post-body pre{background:#2d3748;color:#e2e8f0;padding:1.5rem;border-radius:.5rem;overflow-x:auto;margin-bottom:1.5rem}.post-body pre code{background:0 0;padding:0;color:inherit}.post-body blockquote{border-left:4px solid #4f46e5;padding-left:1.5rem;margin:1.5rem 0;font-style:italic;color:#6b7280}.post-body strong{font-weight:600;color:#1f2937}.post-body table{width:100%;border-collapse:collapse;margin:1.5rem 0}.post-body table th,.post-body table td{padding:.75rem;border:1px solid #e5e7eb;text-align:left}.post-body table th{background:#f9fafb;font-weight:600}.post-footer{margin-top:3rem;padding-top:2rem;border-top:2px solid #e5e7eb}.post-navigation{display:grid;grid-template-columns:repeat(auto-fit,minmax(200px,1fr));gap:1.5rem}.nav-link{display:flex;flex-direction:column;gap:.5rem;padding:1.5rem;background:#f9fafb;border-radius:.5rem;transition:all .3s ease}.nav-link:hover{background:#4f46e5;color:#fff;transform:translateX(5px)}.nav-link.prev:hover{transform:translateX(-5px)}.nav-label{font-size:.875rem;font-weight:600;text-transform:uppercase;opacity:.7}.nav-title{font-weight:500}.pagination{display:flex;justify-content:center;align-items:center;gap:2rem;margin:3rem 0}.pagination-link{padding:.75rem 1.5rem;background:#fff;border-radius:.5rem;font-weight:500;box-shadow:0 1px 2px rgba(0,0,0,5%);transition:all .3s ease}.pagination-link:hover{background:#4f46e5;color:#fff;transform:translateY(-2px);box-shadow:0 4px 6px -1px rgba(0,0,0,.1)}.pagination-info{color:#6b7280;font-weight:500}.site-footer{background:#fff;padding:2rem 0;margin-top:4rem;border-top:1px solid #e5e7eb;text-align:center}.site-footer p{color:#6b7280;margin:.5rem 0}.page-header{text-align:center;padding:3rem 0;margin-bottom:3rem}.page-header h1{font-size:2.5rem;margin-bottom:.5rem}.page-header p{font-size:1.125rem;color:#6b7280}.about-content{background:#fff;border-radius:1rem;padding:3rem;margin:2rem 0;box-shadow:0 4px 6px -1px rgba(0,0,0,.1);max-width:800px;margin-left:auto;margin-right:auto}.about-content h1{font-size:2.5rem;margin-bottom:2rem;color:#1f2937}.about-content h2{font-size:1.875rem;margin-top:2rem;margin-bottom:1rem;color:#1f2937}.about-content p,.about-content ul{font-size:1.125rem;line-height:1.8;margin-bottom:1.5rem;color:#6b7280}.about-content ul{padding-left:2rem}@media(max-width:768px){.site-header .container{flex-direction:column;text-align:center}.site-tagline{padding-left:0}.main-nav{flex-wrap:wrap;justify-content:center;gap:1rem}.hero-section h2{font-size:2rem}.posts-grid{grid-template-columns:1fr}.single-post,.about-content{padding:2rem 1.5rem}.post-header h1{font-size:2rem}.post-navigation{grid-template-columns:1fr}}@media(max-width:480px){.container{padding:0 1rem}.hero-section{padding:2rem 1rem}.hero-section h2{font-size:1.5rem}.pagination{flex-direction:column;gap:1rem}}